<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Gestion des Emprunts</h2>
        </div>
        
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Livre</th>
                                <th>Étudiant</th>
                                <th>Date d'emprunt</th>
                                <th>Date de retour prévue</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (emprunts && emprunts.length > 0) { %>
                                <% emprunts.forEach(emprunt => { %>
                                    <tr>
                                        <td><%= emprunt.livre.titre %></td>
                                        <td><%= emprunt.etudiant.nom %></td>
                                        <td><%= new Date(emprunt.dateEmprunt).toLocaleDateString() %></td>
                                        <td><%= new Date(emprunt.dateRetourPrevu).toLocaleDateString() %></td>
                                        <td>
                                            <span class="badge bg-<%= emprunt.statut === 'en_cours' ? 'success' : (emprunt.statut === 'en_retard' ? 'danger' : 'warning') %>">
                                                <%= emprunt.statut %>
                                            </span>
                                        </td>
                                        <td>
                                            <% if (emprunt.statut === 'en_cours' || emprunt.statut === 'en_retard') { %>
                                                <form action="/admin/emprunts/<%= emprunt._id %>/retour" method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-success">Marquer comme retourné</button>
                                                </form>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="text-center">Aucun emprunt trouvé</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
