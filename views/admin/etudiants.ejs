<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Gestion des Étudiants</h2>
        </div>
        
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Classe</th>
                                <th>Date d'inscription</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (etudiants && etudiants.length > 0) { %>
                                <% etudiants.forEach(etudiant => { %>
                                    <tr>
                                        <td><%= etudiant.nom %></td>
                                        <td><%= etudiant.classe %></td>
                                        <td><%= new Date(etudiant.dateInscription).toLocaleDateString() %></td>
                                        <td>
                                            <a href="/admin/etudiants/<%= etudiant._id %>/emprunts" class="btn btn-sm btn-info">Voir les emprunts</a>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="text-center">Aucun étudiant trouvé</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 