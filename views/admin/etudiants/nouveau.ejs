<%- include('../../partials/header') %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Ajouter un étudiant</h2>
                </div>
                <div class="card-body">
                    <% if (typeof error !== 'undefined') { %>
                        <div class="alert alert-danger" role="alert">
                            <%= error %>
                        </div>
                    <% } %>

                    <form action="/admin/etudiants" method="POST">
                        <div class="mb-3">
                            <label for="nom" class="form-label">Nom</label>
                            <input type="text" class="form-control" id="nom" name="nom" required
                                value="<%= typeof formData !== 'undefined' ? formData.nom : '' %>">
                        </div>

                        <div class="mb-3">
                            <label for="prenom" class="form-label">Prénom</label>
                            <input type="text" class="form-control" id="prenom" name="prenom" required
                                value="<%= typeof formData !== 'undefined' ? formData.prenom : '' %>">
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required
                                value="<%= typeof formData !== 'undefined' ? formData.email : '' %>">
                        </div>

                        <div class="mb-3">
                            <label for="username" class="form-label">Nom d'utilisateur</label>
                            <input type="text" class="form-control" id="username" name="username" required
                                value="<%= typeof formData !== 'undefined' ? formData.username : '' %>">
                        </div>

                        <div class="mb-3">
                            <label for="classe" class="form-label">Classe</label>
                            <select class="form-select" id="classe" name="classe" required>
                                <option value="">Sélectionnez une classe</option>
                                <option value="L1" <%= typeof formData !== 'undefined' && formData.classe === 'L1' ? 'selected' : '' %>>Licence 1</option>
                                <option value="L2" <%= typeof formData !== 'undefined' && formData.classe === 'L2' ? 'selected' : '' %>>Licence 2</option>
                                <option value="L3" <%= typeof formData !== 'undefined' && formData.classe === 'L3' ? 'selected' : '' %>>Licence 3</option>
                                <option value="M1" <%= typeof formData !== 'undefined' && formData.classe === 'M1' ? 'selected' : '' %>>Master 1</option>
                                <option value="M2" <%= typeof formData !== 'undefined' && formData.classe === 'M2' ? 'selected' : '' %>>Master 2</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/admin/etudiants" class="btn btn-secondary">Annuler</a>
                            <button type="submit" class="btn btn-primary">Ajouter l'étudiant</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %> 