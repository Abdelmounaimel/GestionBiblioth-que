<%- include('../partials/header') %>

<div class="container mt-4">
    <h1 class="mb-4">Tableau de bord</h1>

    <!-- Emprunts en cours -->
    <div class="card mb-4">
        <div class="card-header">
            <h2 class="h5 mb-0">Mes emprunts en cours</h2>
        </div>
        <div class="card-body">
            <% if (empruntsEnCours && empruntsEnCours.length > 0) { %>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Livre</th>
                                <th>Date d'emprunt</th>
                                <th>Date de retour prévue</th>
                                <th>Statut</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% empruntsEnCours.forEach(emprunt => { %>
                                <tr>
                                    <td><%= emprunt.livre.titre %></td>
                                    <td><%= new Date(emprunt.dateEmprunt).toLocaleDateString() %></td>
                                    <td><%= new Date(emprunt.dateRetourPrevue).toLocaleDateString() %></td>
                                    <td>
                                        <span class="badge <%= emprunt.statut === 'en_retard' ? 'bg-danger' : 'bg-primary' %>">
                                            <%= emprunt.statut === 'en_retard' ? 'En retard' : 'En cours' %>
                                        </span>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="mb-0">Vous n'avez aucun emprunt en cours.</p>
            <% } %>
        </div>
    </div>

    <!-- Livres disponibles -->
    <div class="card">
        <div class="card-header">
            <h2 class="h5 mb-0">Livres disponibles</h2>
        </div>
        <div class="card-body">
            <% if (livresDisponibles && livresDisponibles.length > 0) { %>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Auteur</th>
                                <th>Catégorie</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% livresDisponibles.forEach(livre => { %>
                                <tr>
                                    <td><%= livre.titre %></td>
                                    <td><%= livre.auteur %></td>
                                    <td><%= livre.categorie %></td>
                                    <td>
                                        <a href="/livres/<%= livre._id %>" class="btn btn-sm btn-info">Détails</a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                <div class="mt-3">
                    <a href="/livres" class="btn btn-primary">Voir tous les livres</a>
                </div>
            <% } else { %>
                <p class="mb-0">Aucun livre disponible pour le moment.</p>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
